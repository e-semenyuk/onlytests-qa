# Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

NODE_ENV=development

# Development Environment
DEV_BASE_URL=https://onlytests.io
DEV_API_URL=https://onlytests.io/api

# Staging Environment
STAGING_BASE_URL=https://staging.onlytests.io
STAGING_API_URL=https://staging.onlytests.io/api

# Production Environment
PROD_BASE_URL=https://onlytests.io
PROD_API_URL=https://onlytests.io/api

# Test Environment
TEST_BASE_URL=http://localhost:3000
TEST_API_URL=http://localhost:3000/api

# Test Configuration
TIMEOUT=30000
RETRIES=2

# Browser Configuration
HEADLESS=true
SCREENSHOT_ON_FAILURE=true
VIDEO_ON_FAILURE=true
TRACE_ON_FAILURE=true

# Parallel Execution Configuration
PARALLEL=true
WORKERS=4

# CI/CD Configuration
CI=false

# Security Configuration
# Set to true to enable additional security checks
ENABLE_SECURITY_CHECKS=false

# Logging Configuration
LOG_LEVEL=info
ENABLE_DEBUG_LOGS=false 