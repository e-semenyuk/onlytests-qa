{
  "name": "test-automation-framework",
  "version": "1.0.0",
  "description": "Test Automation Framework with Playwright and TypeScript",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --grep @ui",
    "test:api": "playwright test --grep @api",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "test:codegen": "playwright codegen",
    "test:validate": "ts-node src/setup/test-setup.ts",
    "test:setup": "npm run test:validate && npm test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "security-check": "npm audit",
    "setup": "npm install && npm run test:install"
  },
  "keywords": [
    "playwright",
    "typescript",
    "test-automation",
    "ui-testing",
    "api-testing"
  ],
  "author": "Test Automation Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.0"
  },
  "dependencies": {
    "dotenv": "^16.3.0",
    "@faker-js/faker": "^8.0.0",
    "zod": "^3.22.0"
  }
} 